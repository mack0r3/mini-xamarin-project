<resources>

  <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@color/appBackgroundColor</item>
    <item name="colorPrimary">@color/appPrimaryColor</item>
    <item name="colorPrimaryDark">#0A64AD</item>
    <item name="colorAccent">@color/appPrimaryColor</item>
  </style>

  <style name="editText_theme">
    <item name="android:imeOptions">actionNext</item>
    <item name="android:singleLine">true</item>
    <item name="colorControlNormal">@color/appPrimaryColor</item>
    <item name="colorControlActivated">@color/appPrimaryColor</item>
    <item name="colorControlHighlight">@color/appPrimaryColor</item>
    <item name="android:textColorPrimary">#FFFFFF</item>
    <item name="android:textSize">@dimen/editText_text_size</item>
  </style>

  <style name="editText_style">
    <item name ="android:theme">@style/editText_theme</item>
    <item name ="android:paddingTop">4dp</item>
  </style>

  <style name="loginButton_style" parent="@style/Widget.AppCompat.Button.Colored"    >
    <item name="android:layout_marginRight">@dimen/appPrimaryMargin</item>
    <item name="android:layout_marginLeft">@dimen/appPrimaryMargin</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginBottom">20dp</item>
    <item name="android:textSize">@dimen/button_text_size</item>
    <item name="android:colorButtonNormal">@color/appPrimaryColor</item>
  </style>

  <style name="registerButton_style" parent="@style/Widget.AppCompat.Button.Colored"    >
    <item name="android:layout_marginRight">@dimen/appPrimaryMargin</item>
    <item name="android:layout_marginLeft">@dimen/appPrimaryMargin</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:textSize">@dimen/button_text_size</item>
  </style>

  <style name="registerAndloginSwapButton_style" parent="@style/Widget.AppCompat.Button.Borderless">   
    <item name="android:textSize">@dimen/smallButton_text_size</item>
    <item name="android:layout_marginRight">@dimen/appPrimaryMargin</item>
    <item name="android:layout_marginLeft">@dimen/appPrimaryMargin</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="textInput_style">
    <item name="android:layout_marginRight">@dimen/appPrimaryMargin</item>
    <item name="android:layout_marginLeft">@dimen/appPrimaryMargin</item>   
  </style>

</resources>

